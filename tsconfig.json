{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
        "experimentalDecorators": true,
		"baseUrl": "./src",
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": ["node_modules"],
	"include": ["src/types/**/*.d.ts", "next-env.d.ts", "src", "node_modules/eslint-plugin-react/lib/types.d.ts"]
}
